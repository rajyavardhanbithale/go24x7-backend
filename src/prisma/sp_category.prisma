model ServiceProviderCategory {
  id       String @id @default(uuid()) @db.Uuid
  name     String
  icon     String

  parentId String? @db.Uuid
  parent   ServiceProviderCategory? @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children ServiceProviderCategory[] @relation("CategoryHierarchy")

  isActive Boolean @default(true)
  isInHome Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
